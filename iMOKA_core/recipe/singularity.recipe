Bootstrap: localimage

From: #write here the base_img or use the script ./scripts/generate_singularity_images.sh

	
%files

   ./src /src
   ./Release /Release
   ./scripts /scripts
   ./python /python

%labels
   Version v0.1

%post
	threads=4
	cd /Release
	make clean
	make -j${threads} all
	mv ./iMOKA_core /external/
	mv /scripts/* /external/
	mv /python/* /external/
	rmdir /python /scripts
	ln -s /external/iMOKA_core /external/KmerAnalysis
	
%runscript
	KmerAnalysis $@



	
